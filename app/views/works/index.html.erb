

<div class="text-center col-md-12">
<h1>Listing Works</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="row">
    <% @works.each do |work| %>
      <tr>
        <td class="col-md-3"> <%= work.title %> </td>
        <td class="col-md-3"><%= link_to 'Show', work %></td>
        <td class="col-md-3"><%= link_to 'Edit', edit_work_path(work) %></td>
        <td class="col-md-3"><%= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "<button class='btn btn-primary'>New Work</button>".html_safe, new_work_path %>
</div>