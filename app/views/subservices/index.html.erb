<div class="text-center col-md-12">
<h3>Listado de servicios en la categoria <%= @service.name %></h3>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="row">
    <% @subservices.each do |subservice| %>
      <tr>
        <td class="col-md-3"> <%= subservice.name %> </td>
        <td class="col-md-3"><%= link_to 'Edit', edit_service_subservice_path(@service.id, subservice) %></td>
        <td class="col-md-3"><%= link_to 'Destroy', service_subservice_path(@service.id, subservice), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "<button class='btn btn-primary'>New subservice</button>".html_safe, new_service_subservice_path(@service.id) %>
</div>