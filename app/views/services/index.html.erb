<div class="text-center col-md-12">
<h1>Listing services</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="row">
    <% @services.each do |service| %>
      <tr>
        <td class="col-md-3"> <%= service.name %> </td>
        <td class="col-md-3"><%= link_to 'Show', service %></td>
        <td class="col-md-3"><%= link_to 'Edit', edit_service_path(service) %></td>
        <td class="col-md-3"><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "<button class='btn btn-primary'>New service</button>".html_safe, new_service_path %>
</div>